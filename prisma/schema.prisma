generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Collection {
  id          Int    @id @default(autoincrement())
  mal_id      String
  judul_anime String
  img_anime   String
  user_email  String

  @@unique([user_email, mal_id, judul_anime, img_anime])
}

model Comment {
  id          Int      @id @default(autoincrement())
  mal_id      String
  anime_title String
  anime_img   String
  user_email  String
  username    String
  created_at  DateTime
  comment     String
}

model Rating {
  id         Int    @id @default(autoincrement())
  mal_id     String
  user_email String
  rating     Int

  @@unique([user_email, mal_id])
}
